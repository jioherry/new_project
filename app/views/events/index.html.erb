<p id="notice"><%= notice %></p>

<h1>Events</h1>

<p>
  <%= link_to "Latest Event", latest_events_path %>
</p>

<%= form_tag events_path, :method => :get do %>
  <%= text_field_tag "keyword" %>
  <%= submit_tag "Search" %>
<% end %>

<%= form_tag bulk_update_events_path do %>

<table>

  <thead>
    <tr>
      <th>Name</th>
      <th>Descrption</th>
      <th>Is public</th>
      <th>Capacity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

    <% @events.each do |event| %>
      <tr>
        <td>
          <%= check_box_tag "ids[]", event.id,false %>
          <%= event.name %>
        </td>
        <td><%= event.descrption %></td>
        <td><%= event.is_public %></td>
        <td><%= event.capacity %></td>
        <td><%= link_to "Dashboard", dashboard_event_path(event)%></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Attendee List', event_attendees_path(event) %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>

</table>

  <%= submit_tag "Delete" %>
  <%= submit_tag "publish" %>

<% end %>

<br>

<%= link_to 'New Event', new_event_path %>


